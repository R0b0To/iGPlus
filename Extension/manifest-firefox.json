{
    "manifest_version":2,
    "name": "igp extended",
    "description": "extend your gaming experience",
    "version":"0.7.4",
     "icons":{
         "16": "./images/racing.png",
         "32": "./images/racing.png",
         "48": "./images/racing.png",
         "128": "./images/racing.png"
     },
     "background": {
         "scripts": ["background.js"]
     },
    
     "browser_action":{
         "default_popup": "popup.html",
         "default_icons":{
            "16": "./images/racing.png",
            "32": "./images/racing.png",
            "48": "./images/racing.png",
            "128": "./images/racing.png"
         }
     },
     "options_page": "options.html",
     "permissions":[
         "activeTab",
         "tabs",
         "storage",
         "scripting",
         "*://igpmanager.com/*"
     ]

    
}