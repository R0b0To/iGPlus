{
  "manifest_version": 3,
  "name": "iGPlus",
  "version": "1.1.0",
  "description": "Enhance your iGPmanager experience",
  "permissions": [
    "tabs",
    "storage",
    "scripting"
  ],
  "action": {
    "default_icons": {
      "128": "images/Icon128.png"
    },
    "default_popup": "popup.html"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "host_permissions": [
    "*://igpmanager.com/*"
  ],
  "icons": {
    "128": "images/Icon128.png"
  },
  "options_ui": {
    "open_in_tab": true,
    "page": "options/options.html"
  },
  "web_accessible_resources": [
    {
      "matches": [
        "*://igpmanager.com/*"
      ],
      "resources": [
        "*.png",
        "*.PNG"
      ]
    }
  ]
}