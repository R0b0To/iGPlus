{
  "manifest_version": 3,
  "name": "iGPlus",
  "version": "1.5.83",
  "description": "Enhance your iGPmanager experience",
  "permissions": [
    "tabs",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "*://igpmanager.com/*"
  ],
  "action": {
    "default_icon": {
      "128": "images/Icon128.png"
    },
    "default_popup": "popup/popup.html"
  },
  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },
  "icons": {
    "128": "images/Icon128.png"
  },
  "web_accessible_resources": [
    {
      "matches": ["*://igpmanager.com/*"],
      "resources": ["*.png", "*.PNG", "*.svg", "*.css", "*.js"]
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "{6782657b-7bf7-4152-8eb4-a32bbc822aa8}",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}